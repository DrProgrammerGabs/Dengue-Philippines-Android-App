<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/pdf_toolbar" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:textSize="12sp" android:textColor="@drawable/black" android:gravity="center" android:id="@+id/btn_prev" android:layout_width="wrap_content" android:layout_height="30sp" android:text="Prev"/>
        <Button android:textSize="12sp" android:textColor="@drawable/black" android:gravity="center" android:id="@+id/btn_next" android:layout_width="wrap_content" android:layout_height="30sp" android:text="Next" android:layout_toRightOf="@+id/btn_prev"/>
        <Button android:textSize="12sp" android:textColor="@drawable/black" android:gravity="center" android:id="@+id/back" android:layout_width="wrap_content" android:layout_height="30sp" android:text="back" android:layout_toRightOf="@+id/btn_next"/>
    </RelativeLayout>
    <org.vudroid.core.DocumentView android:id="@+id/pdf_view" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/pdf_toolbar"/>
</RelativeLayout>
