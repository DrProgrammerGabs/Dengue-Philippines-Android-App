<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/pdf_toolbarnew" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:textSize="12sp" android:textColor="@drawable/black" android:gravity="center" android:id="@+id/btn_prevnew" android:layout_width="wrap_content" android:layout_height="30sp" android:text="Prev"/>
        <Button android:textSize="12sp" android:textColor="@drawable/black" android:gravity="center" android:id="@+id/btn_nextnew" android:layout_width="wrap_content" android:layout_height="30sp" android:text="Next" android:layout_toRightOf="@+id/btn_prevnew"/>
        <Button android:textSize="12sp" android:textColor="@drawable/black" android:gravity="center" android:id="@+id/backnew" android:layout_width="wrap_content" android:layout_height="30sp" android:text="back" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
        <EditText android:textSize="12sp" android:gravity="center" android:id="@+id/pagenumber" android:layout_width="50sp" android:layout_height="30sp" android:layout_toRightOf="@+id/btn_nextnew" android:layout_alignParentTop="true" android:layout_centerVertical="true" android:inputType="number">
            <requestFocus/>
        </EditText>
        <Button android:textSize="12sp" android:gravity="center" android:id="@+id/gotopage" android:layout_width="wrap_content" android:layout_height="30sp" android:text="go" android:layout_toRightOf="@+id/pagenumber" android:layout_alignParentTop="true"/>
        <Button android:id="@+id/testButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Button" android:layout_toRightOf="@+id/gotopage" android:layout_alignBottom="@+id/gotopage" android:layout_alignParentTop="true"/>
    </RelativeLayout>
    <org.vudroid.core.DocumentViewNew android:id="@+id/pdf_viewnew" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/pdf_toolbarnew"/>
</RelativeLayout>
